@model Lanche

<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="@Model.ImagemUrl" class="img-fluid" /></p>
    <h4>Preço: @Model.Preco.ToString("c")</h4>
    <a asp-controller="Lanche" asp-action="Details"
       asp-route-lancheId="@Model.Id">@Model.Nome</a>

    <p>@Model.DescricaoCurta</p>
    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AddItemNoCarrinho" asp-route-lancheId="@Model.Id">
                Incluir no Carrinho
            </a>
        </p>
    </div>
</div>
