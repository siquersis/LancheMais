@model CarrinhoCompraViewModel

<div class="container">
    <div class="row">
       <img src="~/images/Full-Cart-icon.png" style="width: auto;
    height: auto;"/>
        <div>
            <h4>Carrinho de pedidos:</h4>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Lanche</th>
                    <th>Quantidade</th>
                    <th class="text-right">Preço</th>
                    <th class="text-right">Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItens)
                {
                    <tr>
                        <td class="text-center">@item.Lanche.Nome</td>
                        <td class="text-center">@item.Quantidade</td>
                        <td class="text-center">@item.Lanche.Preco.ToString("c")</td>
                        <td class="text-center">
                            @((item.Quantidade * item.Lanche.Preco).ToString("c"))
                            <a asp-controller="CarrinhoCompra" asp-action="RemoverItemCarrinho"
                           asp-route-lancheId="@item.Lanche.Id">
                                <img src="~/images/delete.png" />
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total:</td>
                    <td class="text-right">
                        @Model.CarrinhoCompraTotal.ToString("c")
                    </td>
                </tr>
            </tfoot>
        </table>
        <div class="text-right">
            <div class="btn-group">
                <a class="btn btn-success" asp-controller="Pedido" asp-action="Checkout">Encerrar pedido</a>
                &nbsp;&nbsp;&nbsp;
                <a class="btn btn-primary" asp-controller="Lanche" asp-action="List">Continue comprando</a>
            </div>
        </div>
        <br />
    </div>
</div>